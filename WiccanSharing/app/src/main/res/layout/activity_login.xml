<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#008d8b"
    tools:context="com.example.wiccansharing.Login">

    <!-- Login progress -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Server IP is:"
        android:gravity="center"
        android:textColor="#ffffff"
        android:paddingTop="100px"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50px"
        android:ems="10"
        android:backgroundTint="#40aba9"
        android:fontFamily="sans-serif-light"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inform your Username:"
        android:paddingTop="130px"
        android:gravity="center"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:backgroundTint="#40aba9"
        android:paddingTop="50px"
        android:inputType="textPersonName" />


    <CheckBox
        android:id="@+id/SaveUsernameBOX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:buttonTint="#FFFF"
        android:text="Save my Username" />

    <ImageButton
        android:id="@+id/Button"
        android:layout_width="153dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="50px"
        android:background="@drawable/login"/>

</LinearLayout>

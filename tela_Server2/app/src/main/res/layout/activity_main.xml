<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/background_light"
    tools:context="com.example.ccaue.tela_server.MainActivity">

    <Button
        android:id="@+id/button_iniciar_Server"
        style="@android:style/Widget.Button"
        android:layout_width="134dp"
        android:layout_height="57dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="234dp"
        android:text="@string/iniciar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_IP"
        android:layout_width="71dp"
        android:layout_height="72dp"
        android:layout_marginBottom="163dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="IP"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_iniciar_Server"
        app:layout_constraintEnd_toStartOf="@+id/text_conteudo_IP"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="36sp" />

    <TextView
        android:id="@+id/text_conteudo_IP"
        android:layout_width="250dp"
        android:layout_height="72dp"
        android:layout_marginBottom="163dp"
        android:layout_marginEnd="40dp"
        android:text="Conteudo_IP"
        app:layout_constraintBottom_toTopOf="@+id/button_iniciar_Server"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textSize="36sp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-42dp" />

    <ImageButton
        android:id="@+id/button_Back"
        android:layout_width="40dp"
        android:layout_height="57dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="344dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/text_IP"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/back" />

</android.support.constraint.ConstraintLayout>
